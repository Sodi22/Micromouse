<?xml version='1.0'?>

<robot name="micromouse" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- RViz colors -->
  <xacro:include filename="$(find ros2_micromouse)/urdf/materials.xacro" />
  <!-- Gazebo plugin -->
  <xacro:include filename="$(find ros2_micromouse)/urdf/micromouse.gazebo" />


  <!-- Robot footprint -->
  <link name="base_footprint"></link>

  <!-- Robot chassis = base_link -->
  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="base_link" />
  </joint>

  <link name='base_link'>
    <pose>0 0 0.03 0 0 0</pose>

    <!-- Base -->
    <inertial>
      <mass value="0.6"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.00014625" ixy="0" ixz="0"
          iyy="0.00042345" iyz="0"
          izz="0.0004797"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.087 0.045 0.03"/>
      </geometry>
    </collision>

    <visual name='base_link_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename = "package://ros2_micromouse/meshes/base_link.dae"/>
      </geometry>
    </visual>

    <!-- Rear Caster Wheel -->
    <collision name='rear_caster_collision'>
      <origin xyz="-0.03 0 -0.015" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0049"/>
      </geometry>
    </collision>

    <visual name='rear_caster_visual'>
      <origin xyz="-0.03 0 -0.015" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
    </visual>

    <!-- Front Caster Wheel -->
    <collision name='front_caster_collision'>
      <origin xyz="0.03 0 -0.015" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0049"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.03 0 -0.015" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
    </visual>
  </link>

  <!-- Left Wheel -->
  <joint type="continuous" name="left_wheel_joint">
    <origin xyz="0 0.0325 0" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="10"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name='left_wheel'>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia
          ixx="0.003" ixy="0" ixz="0"
          iyy="0.003" iyz="0"
          izz="0.005"
      />
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/> 
      <geometry>
        <cylinder radius=".02" length=".02"/> 
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <mesh filename = "package://ros2_micromouse/meshes/robo_wheel.dae"/>
      </geometry>
    </visual>
  </link>

  <!-- Right Wheel -->
  <joint type="continuous" name="right_wheel_joint">
    <origin xyz="0 -0.0325 0" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="10"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name='right_wheel'>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia
          ixx="0.003" ixy="0" ixz="0"
          iyy="0.003" iyz="0"
          izz="0.005"
      />
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/> 
      <geometry>
        <cylinder radius=".02" length=".02"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <mesh filename = "package://ros2_micromouse/meshes/robo_wheel_right.dae"/>
      </geometry>
    </visual>
  </link>

  <!-- Gazebo frictions -->
  <gazebo reference="left_wheel">
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.0001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>

  <gazebo reference="right_wheel">
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.0001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>

  <gazebo reference="base_link">
    <mu1>0.000002</mu1>
    <mu2>0.000002</mu2>
  </gazebo>

    <!-- IMU -->
  <joint name="imu_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_link"/>
    <child link="imu_link" />
  </joint>

  <link name="imu_link">
  </link>
</robot>